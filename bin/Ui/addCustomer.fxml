<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<BorderPane fx:controller="Ui.addCustomer_Controller" 
xmlns:fx="http://javafx.com/fxml/1">

	<center>
	
	<VBox spacing="20">
	
	<HBox spacing="20">
	
	<Label text="Enter the Branch ID" alignment="center" 
	 BorderPane.alignment="center"
 style="-fx-border-width: 5">
 
 	<font>
	<Font name="Times New Roman" size="20"></Font>
	</font>
	
 </Label>
 
 <TextField fx:id="branch_id" text="" onKeyReleased="#handleKeyReleased"></TextField>
	
	
	</HBox>
	
	
	<HBox spacing="20">
	
	<Label text="Enter the Customer Name" alignment="center" 
	 BorderPane.alignment="center"
 style="-fx-border-width: 5">
 
 	<font>
	<Font name="Times New Roman" size="20"></Font>
	</font>
	
 </Label>
 
 <TextField fx:id="customer_name" text="" onKeyReleased="#handleKeyReleased"></TextField>
	
	
	</HBox>
	
	<HBox spacing="20">
	
	<Label text="Enter the Customer Phone Number" alignment="center" 
	 BorderPane.alignment="center"
 style="-fx-border-width: 5">
 
 	<font>
	<Font name="Times New Roman" size="20"></Font>
	</font>
	
 </Label>
 
 <TextField fx:id="customer_phone" text="" onKeyReleased="#handleKeyReleased"></TextField>
	
	
	</HBox>
	
	
	<HBox spacing="20">
	
	<Label text="Enter the Customer Address" alignment="center" 
	 BorderPane.alignment="center"
 style="-fx-border-width: 5">
 
 	<font>
	<Font name="Times New Roman" size="20"></Font>
	</font>
	
 </Label>
 
 <TextField fx:id="customer_address" text="" onKeyReleased="#handleKeyReleased"></TextField>
	
	
	</HBox>
	
	
	<HBox spacing="20">
	
	<Label text="Enter the Customer Age" alignment="center" 
	 BorderPane.alignment="center"
 style="-fx-border-width: 5">
 
 	<font>
	<Font name="Times New Roman" size="20"></Font>
	</font>
	
 </Label>
 
 <TextField fx:id="customer_age" text="" onKeyReleased="#handleKeyReleased"></TextField>
	
	
	</HBox>
	
	
	<Button fx:id="submit_customer" text="Save" onAction="#onButtonClicked">
	
	<padding>
	<Insets top="20" right="20" bottom="20" left="20"></Insets>
	</padding>
	
	</Button>
	
	
	<Label fx:id="result" text="" alignment="center" 
	 BorderPane.alignment="center"
 style="-fx-border-width: 5">
	<font>
	<Font name="Times New Roman" size="20"></Font>
	</font>
	</Label>
	
	
	
	</VBox>
	
	
	</center>
	
	<bottom>
	<Button fx:id="exit" text="Exit" onAction="#onExit">
	<padding>
	<Insets top="20" right="20" bottom="20" left="20"></Insets>
	</padding>
	</Button>
	</bottom>



	
</BorderPane>

